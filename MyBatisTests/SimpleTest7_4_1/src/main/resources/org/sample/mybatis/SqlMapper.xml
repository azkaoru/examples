<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sample.mybatis.SqlMapper">
    <!-- autoMappingを明示的に有効化。ただし、idがOrderLineとItemsでバッティングするため、ItemsのidをitemIdに変更 -->
    <select id="selectOrders" databaseId="postgresql" resultMap="orderResultMap">
        select o.id, o.qty, i.id as itemId, i.name
            from order_line o inner join items i on (o.id = i.o_id) 
            where o.id = #{ID}
    </select>
    
    <!-- resultMapを二つに分けるか、もしくは一つにまとめた形で、上記のSQL文に対するマッピングを定義する。@Manyでは表現できないらしい
    <resultMap type="org.sample.mybatis.OrderLine" id="orderResultMap" autoMapping="true">
        <collection property="items" ofType="org.sample.mybatis.Items" resultMap="itemMap"/>
    </resultMap>
    <resultMap type="org.sample.mybatis.Items" id="itemMap" autoMapping="true">
        <id property="id" column="itemId"/>
    </resultMap>
    -->
    
    <resultMap type="org.sample.mybatis.OrderLine" id="orderResultMap" autoMapping="true">
        <collection property="items" ofType="org.sample.mybatis.Items" autoMapping="true">
            <id property="id" column="itemId" javaType="long"/>
        </collection>
    </resultMap>
    
</mapper>